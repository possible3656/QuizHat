<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_itemcourse_elevation"
    android:elevation="3dp"
    android:id="@+id/Course_layout"
    android:visibility="visible"
    android:layout_marginBottom="5dp">

    <!--    app:cardElevation="10dp"-->

    <RelativeLayout
        android:id="@+id/Course_layout1"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@drawable/course_background"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/course_image"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp" />
        <TextView
            android:id="@+id/txt_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPSC"
            android:textColor="#F18A07"
            android:fontFamily="@font/proximanovaregular"
            android:layout_toRightOf="@id/course_image"
            android:textSize="19sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/txt_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="disc"
            android:maxLines="4"
            android:ellipsize="end"
            android:visibility="visible"
            android:layout_below="@id/txt_course"
            android:layout_toRightOf="@id/course_image"
            android:textColor="#EE535353"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/layout_coming_soon"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:visibility="visible"

            android:layout_below="@id/txt_course"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_coming_soon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#149cac"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/proximanovaregular"
                android:text="Coming Soon"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>


